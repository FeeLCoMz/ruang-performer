{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/auth/(login|register|me|forgot-password|reset-password|2fa-setup|2fa-verify)",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/practice(/.*)?",
      "dest": "/api/resources.js"
    },
    {
      "src": "/api/gigs/([^/]+)$",
      "dest": "/api/gigs/[id].js?id=$1"
    },
    {
      "src": "/api/gigs(/.*)?",
      "dest": "/api/resources.js"
    },
    {
      "src": "/api/songs/([^/]+)$",
      "dest": "/api/songs/[id].js?id=$1"
    },
    {
      "src": "/api/bands/invitations/([^/]+)$",
      "dest": "/api/invitations.js?id=$1"
    },
    {
      "src": "/api/setlists/([^/]+)$",
      "dest": "/api/setlists/[id].js?id=$1"
    },
    {
      "src": "/api/bands/([^/]+)$",
      "dest": "/api/bands/[id].js?id=$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
